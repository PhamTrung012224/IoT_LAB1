<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:gravity="center">

        <TextView
            android:id="@+id/txtTemp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rd_1"
            android:gravity="center"
            android:text="29Â°C"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"></TextView>

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/btnLED"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            app:colorBorder="#F5F8FA"
            app:colorOff="#E1E8ED"
            app:colorOn="#03A5F0"
            app:on="false" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:gravity="center">

        <TextView
            android:id="@+id/txtLight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/rd_2"
            android:gravity="center"
            android:text="300 lux"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"></TextView>

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/btnPUMP"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            app:colorBorder="#F5F8FA"
            app:colorOff="#E1E8ED"
            app:colorOn="#03A5F0"
            app:on="false" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35">

        <TextView
            android:id="@+id/txtHumi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/rd_3"
            android:gravity="center"
            android:text="36%"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </LinearLayout>


</LinearLayout>